        <Grid x:Name="popupGrid"
              Visibility="Hidden"
              Grid.Row="1">
            <Grid Background="FloralWhite"
                  Opacity="0.6"/>

            <Canvas Background="Transparent">
                <Border x:Name="popupBd"
                        Background="White" 
                        BorderBrush="Gray"
                        BorderThickness="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="300">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Message Title"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="Would you like to continue?"
                                   FontSize="16"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   Grid.Row="1"/>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,10,0,0"
                                    Grid.Row="2">
                            <Button x:Name="yesButton"
                                    Content="Yes"
                                    Margin="0,0,10,0"
                                    Click="yesButton_Click"/>

                            <Button x:Name="noButton"
                                    Content="No"
                                    Click="noButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Canvas>
        </Grid>
    </Grid>
